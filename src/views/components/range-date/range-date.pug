include ../text-titles/text-titles.pug
include ../datepicker/datepicker.pug

mixin range-date({from='Прибытие', to='Выезд', idTo='date-from', idFrom='date-to'}={})
  .range-date
    .range-date__fields
      +text-field({label:from})
        .range-date__field
          input.range-date__input(
            id=idFrom,
            name=name,
            data-range='true',
            placeholder='ДД.ММ.ГГГГ'
            autocomplete="off"
          )
      +text-field({label:to})
        .range-date__field
          input.range-date__input(
            id=idTo,
            name=name,
            data-range='true',
            placeholder='ДД.ММ.ГГГГ'
            autocomplete="off"
          )
    .range-date__datepicker
      +datepicker
