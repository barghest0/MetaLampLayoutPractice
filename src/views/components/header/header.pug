include components/logo/logo.pug
include components/nav/nav.pug

mixin header({ state = 'no-authorized', name = '', data = [] } = {})
  header.header(class=`header_${state}`)
    .header__container
      .header__inner(class=`header__inner_${state}`)
        .header__logo
          +logo
        .header__nav
          +nav({ state, name, data })
        .header__burger.js-header__burger
          .header__burger-block
            .header__burger-line
          .header__burger-nav.js-header__burger-nav
            +nav({ state, name, isBurger: true, data })
