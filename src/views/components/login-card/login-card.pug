include ../default-text-field/default-text-field.pug
include ../button/button.pug

mixin login-card({ title = 'Войти' } = {})
  .login-card 
    h1.login-card__title= title
    form.login-card__login-form
      .login-card__block 
        .login-card__block-field 
          +default-text-field({
            placeholder:'Email',
            type:'email',
            name:'email'
          })
        .login-card__block-field 
          +default-text-field({
            placeholder:'Пароль',
            type:'password',
            name:'password'
          })
      .login-card__button
        +button({ text: 'Войти', type: 'filled', isLargest: true })
    .login-card__profile-action 
      p.login-card__profile-action-text Нет аккаунта на Toxin?
      .login-card__profile-action-button
        +button({ text: 'Создать', type: 'outlined' })
