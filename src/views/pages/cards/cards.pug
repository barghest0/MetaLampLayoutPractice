extends ../../layout/ui-kit-page.pug

block title
  title Cards

block page
  include ../../components/search-room-card/search-room-card.pug
  include ../../components/register-card/register-card.pug
  include ../../components/booking-card/booking-card.pug
  include ../../components/login-card/login-card.pug
  include ../../components/datepicker/datepicker.pug
  include ../../components/preview-room/preview-room.pug

  - roomsData = require('../../../data/preview-rooms-data')

  .cards
    .container
      .cards__inner
        .cards__column 
          .cards__search-room-card
            +search-room-card
          .cards__register-card
            +register-card
        .cards__column 
          .cards__booking-card
            +booking-card({roomNumber:888, price:9900,isLuxury:true})
          .cards__login-card
            +login-card
        .cards__column
          .cards__datepicker.datepicker-container.js-datepicker-container
            +datepicker({isInline:true, dateFrom:'08.19.2022', dateTo:'08.23.2022'})
          each roomData, key in roomsData.data
            if key <= 1
              .cards__preview-room 
                +preview-room(roomData)