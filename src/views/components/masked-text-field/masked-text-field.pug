include ../text-field/text-field.pug

mixin masked-text-field({id='masked-text-field',name="",placeholder='', type='text', value=""}={})
  +text-field()
    .masked-text-field
      input.masked-text-field__input.js-masked-text-field(
        type=type,
        name=name,
        id=id,
        placeholder=placeholder,
        value=value
      )
