include ../checkbox/checkbox.pug

mixin expand-list({ label = '', state = '', items = {} } = {})
  - const labelClasses = state === 'opened' ? 'expand-list__label_opened' : ''

  .expand-list
    .expand-list__label.js-expand-list__label(class=labelClasses)
      h3.expand-list__label-text=label
      .expand-list__arrow
    .expand-list__items
      each item in items 
        - const { text, state, name } = item;
        .expand-list__item
          +checkbox({ text, state, name })
