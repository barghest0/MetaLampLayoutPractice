extends ../../layout/ui-kit-page.pug

block title
  title Colors & fonts

block page
  include ../../components/color/color.pug

  .colors-fonts
    .container
      .colors-fonts__inner
        .colors-fonts__colors
          +color({ hex: '#1F2041', text:'Dark Shade 100%', opacity:100})
          +color({ hex: '#1F2041', text:'Dark Shade 75%', opacity:75})
          +color({ hex: '#1F2041', text:'Dark Shade 50%', opacity:50})
          +color({ hex: '#1F2041', text:'Dark Shade 25%', opacity:25})
          +color({ hex: '#1F2041', text:'Dark Shade 5%', opacity:5})
          +color({ hex: '#BC9CFF', text:'Purple', color:'purple'})
          +color({ hex: '#6FCF97', text:'Green', color:'green'})
        .colors-fonts__fonts
          .colors-fonts__font
            h1.colors-fonts__tag.colors-fonts__tag_type_widget h1
            .colors-fonts__text.colors-fonts__text_type_widget This one is the sub-section or widget title
          .colors-fonts__font
            h2.colors-fonts__tag.colors-fonts__tag_type_inside-widget h2
            .colors-fonts__text.colors-fonts__text_type_inside-widget Next one is the item title inside widgets
          .colors-fonts__font
            h3.colors-fonts__tag.colors-fonts__tag_type_label h3
            .colors-fonts__text.colors-fonts__text_type_label This is a label or CTA text
          .colors-fonts__font
            p.colors-fonts__tag.colors-fonts__tag_type_text Body
            .color-fonts__text.color-fonts__tag_type_text This is the body text which is used for most of the design, like paragraphs, lists, etc.
