{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "prettier",
    "plugin:fsd/all"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": ["src/vendor"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      },
      "alias": {
        "map": [
          ["src", "./src/"],
          ["libs", "./src/libs/"],
          ["vendor", "./src/vendor/"],
          ["components", "./src/views/components/"],
          ["data", "./src/data"]
        ],
        "extensions": [".js"]
      }
    },
    "import/ignore": ["swiper"]
  },
  "plugins": ["prettier", "pug", "fsd"],
  "rules": {
    "prettier/prettier": ["error"],
    "template-curly-spacing": ["error", "never"]
  }
}
