mixin rich-checkbox({text='',subtext='', name='', state=''}={})
  label.rich-checkbox
    if state === 'checked'
      input.rich-checkbox__input(type="checkbox", name=name, checked)
    else
      input.rich-checkbox__input(type="checkbox", name=name)
    span.rich-checkbox__custom-input
    .rich-checkbox__titles
      .rich-checkbox__title= text
      .rich-checkbox__subtitle= subtext
